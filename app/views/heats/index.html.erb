.modal.fade#view_modal tabindex="-1" role="dialog" aria-labelledby="view_modal_label" aria-hidden="true" 
  .modal-dialog 
    .modal-content 

      .modal-header 
        button.close type="button" data-dismiss="modal" aria-hidden="true" &times;
        h4.modal-title#view_modal_label
      .modal-body style="width: #{site.width}px;"
        div id="heat_el" style="width: #{site.width}px; height: #{site.height}px; \
          position: absolute; opacity: 0.8; background: #eee; left: 0px; top: 0px; \
          z-index: 99999;"

        img src="/heatimg/www_whst_gov_cn.png" style="width: #{site.width}px; \
          height: #{site.height}px; position: absolute; left: 0px; top: 0px; \
          z-index: -1;"

      .modal-footer
        button.pure-button type="button" data-dismiss="modal" Close
        button.pure-button.pure-button-primary Save changes
