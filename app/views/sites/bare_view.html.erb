<%= render("bare_site_view", { site: @site }) %>

<script>
var config = {
  "radius": 12,
  "element": "heat_el",
  "visible": true,
  "opacity": 50,
  "gradient": { 0.45: "rgb(0,0,255)", 0.55: "rgb(0,255,255)", 0.65: "rgb(0,255,0)", 0.95: "yellow", 1.0: "rgb(255,0,0)" }
};

var heatmap = heatmapFactory.create(config);
<% @heats.each do |heat| %>
  heatmap.store.addDataPoint(<%= heat.xpoint - (heat.screen_ratio.split('*')[0].to_i - @site.width)/2 %>, <%= heat.ypoint %>, 50)
<% end %> 
</script> 
